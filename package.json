{
  "name": "rehype-format",
  "version": "2.3.0",
  "description": "Format HTML with rehype",
  "license": "MIT",
  "keywords": [
    "rehype",
    "plugin",
    "format",
    "fmt",
    "html"
  ],
  "repository": "rehypejs/rehype-format",
  "bugs": "https://github.com/rehypejs/rehype-format/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "hast-util-embedded": "^1.0.1",
    "hast-util-phrasing": "^1.0.0",
    "html-whitespace-sensitive-tag-names": "^1.0.0",
    "rehype-minify-whitespace": "^2.0.0",
    "repeat-string": "^1.5.4",
    "unist-util-visit-parents": "^2.0.0"
  },
  "devDependencies": {
    "bail": "^1.0.1",
    "browserify": "^16.0.0",
    "is-hidden": "^1.0.1",
    "negate": "^1.0.0",
    "nyc": "^13.0.0",
    "prettier": "^1.13.7",
    "rehype": "^6.0.0",
    "remark-cli": "^6.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.4.3",
    "to-vfile": "^5.0.0",
    "xo": "^0.23.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write '**/*.js' && xo --fix",
    "build-bundle": "browserify . -s rehypeFormat > rehype-format.js",
    "build-mangle": "browserify . -s rehypeFormat -p tinyify > rehype-format.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "complexity": "off"
    },
    "ignores": [
      "rehype-format.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
